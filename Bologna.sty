\usepackage{totcount}
\regtotcounter{section}
\AtBeginSection[]{
	\begin{frame}
		\begin{columns}[t]
			\begin{column}{.45\textwidth}
				\tableofcontents[sections=1-{\numexpr\totvalue{section}/2\relax},sectionstyle=show/shaded,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/shaded/hide]
			\end{column}
			\begin{column}{.45\textwidth}
				\tableofcontents[sections={\numexpr\totvalue{section}/2+1\relax}-,sectionstyle=show/shaded,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/shaded/hide]
			\end{column}
		\end{columns}
	\end{frame}
}
\AtBeginSubsection[]{
	\begin{frame}
		\tableofcontents[sectionstyle=show/shaded,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/shaded/hide]
	\end{frame}
}

